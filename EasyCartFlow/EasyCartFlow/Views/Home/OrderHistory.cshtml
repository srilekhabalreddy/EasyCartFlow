@model IEnumerable<EasyCartFlow.Models.Order>
@{
    ViewBag.Title = "Order History";
}

<h2>Order History</h2>

@if (!Model.Any())
{
    <p>You have no orders.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToString("g")</td>
                    <td>$@order.TotalAmount</td>
                    <td>@Html.ActionLink("View Details", "OrderDetails", new { orderId = order.OrderId })</td>
                </tr>
            }
        </tbody>
    </table>
}
